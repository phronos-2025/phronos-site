<section class="subscribe-section section" id="subscribe">
  <div class="container">
    <div class="subscribe-grid">
      <div class="subscribe-content">
        <h3 class="subscribe-title">Stay informed</h3>
        <p class="subscribe-description">
          Essays reporting what Phronos detects. No spam. Just signal.
        </p>
      </div>
      <div class="subscribe-embed">
        <iframe
          src="https://phronos.substack.com/embed"
          width="100%"
          height="150"
          style="border:none; background:transparent;"
          frameborder="0"
          scrolling="no"
          title="Subscribe to Phronos dispatches"
        ></iframe>
      </div>
    </div>
  </div>
</section>

<style>
  .subscribe-section {
    /* No border-top here - section header provides the line */
  }

  .subscribe-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-xl);
    align-items: center;
  }

  .subscribe-title {
    font-family: var(--font-serif);
    font-size: var(--text-xl);
    font-weight: 400;
    color: var(--ink);
    margin-bottom: var(--space-sm);
  }

  .subscribe-description {
    font-family: var(--font-serif);
    font-size: var(--text-md);
    color: var(--faded);
    line-height: 1.6;
  }

  .subscribe-embed {
    background: var(--white);
    border: 1px solid var(--faded-light);
    padding: var(--space-md);
  }

  @media (max-width: 767px) {
    .subscribe-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

