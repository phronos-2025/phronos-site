<section class="subscribe-section section" id="subscribe">
  <div class="container">
    <div class="subscribe-grid">
      <div class="subscribe-content">
        <h3 class="subscribe-title">Stay informed</h3>
        <p class="subscribe-description">
          Essays reporting what Phronos detects. No spam. Just signal.
        </p>
        <p class="subscribe-note">Delivered via Substack. Unsubscribe anytime.</p>
      </div>
      <div class="subscribe-form">
        <a href="https://phronos.substack.com/subscribe" target="_blank" rel="noopener" class="subscribe-button">
          Subscribe â†’
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .subscribe-section {
    /* No border-top here - section header provides the line */
  }

  .subscribe-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-xl);
    align-items: center;
  }

  .subscribe-title {
    font-family: var(--font-serif);
    font-size: var(--text-xl);
    font-weight: 400;
    color: var(--ink);
    margin-bottom: var(--space-sm);
  }

  .subscribe-description {
    font-family: var(--font-serif);
    font-size: var(--text-md);
    color: var(--ink);
    line-height: 1.6;
    margin-bottom: var(--space-sm);
  }

  .subscribe-note {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--faded);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .subscribe-form {
    display: flex;
    justify-content: flex-end;
  }

  .subscribe-button {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--white);
    background: var(--ink);
    border: 1px solid var(--ink);
    padding: var(--space-md) var(--space-xl);
    text-decoration: none;
    transition: all var(--transition-default);
  }

  .subscribe-button:hover {
    background: var(--gold);
    border-color: var(--gold);
    color: var(--white);
  }

  @media (max-width: 767px) {
    .subscribe-grid {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .subscribe-form {
      justify-content: center;
    }
  }
</style>

